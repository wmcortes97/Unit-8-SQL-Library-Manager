extends layout

block content
  form.search(action='/books/search' method='GET')
    input.search-bar(type='text' placeholder='Search Books...' name='bookName')
    button Search
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
        